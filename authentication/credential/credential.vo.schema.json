{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Credential",
  "description": "Standard Credential schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "CREDENTIAL"
      ]
    },
    "value": {
      "type": "string",
      "pattern": "^[A-Z]{2}[A-Z0-9]+$"
    }
  },
  "required": [
    "type",
    "value"
  ],
  "additionalProperties": false
}