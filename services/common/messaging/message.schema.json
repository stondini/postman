{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Message",
  "description": "Abstract base message",
  "type": "object",
  "properties": {
    "subject": {
      "type": "string"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid"
    },
    "groupId": {
      "type": "string"
    },
    "createdAt": {
      "type": "string",
      "format": "date"
    },
    "payload": {
      "type": "object"
    }
  },
  "required": [
    "subject",
    "correlationId",
    "createdAt",
    "payload"
  ]
}
